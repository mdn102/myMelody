<div class="content">
  <h3><%= playlist.title %> <small>by <%= playlist.user.name %></small></h3>
  <p>
    <strong><%= moment(playlist.createdAt).calendar() %></strong>
  </p>
  <p><%= playlist.content %></p>
  <hr />
  <a class="backBtn" href="/profile">&larr; Back</a>
  <br><br>
  <% comments.forEach ((comment) => { %>
    <div class="well">
      <p>
        <%= comment.content %> - <%= comment.name %>
      </p>  
    </div>
  <% }) %>
  <hr />
  <h4> Comment:</h4>
  <form method="POST" action="/playlists/<%= playlist.id%>/comments">
    <div class="form-group">
      <label for="name">Name:</label>
      <input class="form-control" id="title" type="text" name="name">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <input type="text" class="form-control" id="content" name="content" required>
    </div>
    <input type="submit" class="btn btn-primary" value="Post">
  </form>
</div>

